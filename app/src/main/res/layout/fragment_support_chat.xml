<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/writingMessageLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/application_inactive">

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/countryImageView"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_centerVertical="true"
			android:layout_marginBottom="@dimen/activity_vertical_margin"
			android:layout_marginStart="8dp"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:background="@color/transparent"
			android:scaleType="centerCrop"
			android:src="@drawable/man1"
			app:riv_border_color="@color/white"
			app:riv_border_width="2dp"
			app:riv_oval="true" />

		<TextView
			android:id="@+id/man1NameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/countryImageView"
			android:layout_marginStart="@dimen/activity_horizontal_margin"
			android:layout_toEndOf="@+id/countryImageView"
			android:background="@color/transparent"
			android:text="@string/support"
			android:textColor="@color/black"
			android:textSize="@dimen/text_size_extra_large_20"
			android:textStyle="bold"
			tools:ignore="RelativeOverlap" />

		<TextView
			android:id="@+id/citiesListTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="@dimen/activity_horizontal_margin"
			android:background="@color/transparent"
			android:text="@string/online"
			android:textSize="@dimen/text_size_large"
			tools:ignore="RelativeOverlap" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/supportMessagesView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_below="@+id/writingMessageLayout">
	</LinearLayout>

</RelativeLayout>