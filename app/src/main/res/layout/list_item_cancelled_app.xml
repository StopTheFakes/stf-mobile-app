<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/titleHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_layout_top_red"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/acceptedTitleTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="45"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:text="@string/declined"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inWorkApplicationItemDateTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="25"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_calendar_white_16dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/half_default_size"
            android:paddingStart="@dimen/half_default_size"
            android:paddingTop="8dp"
            android:text="20.12.17"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleHeaderLayout"
        android:background="@drawable/rounded_bottom_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:text="ID 55577789" />

        <TextView
            android:id="@+id/titleItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:text="@string/fake_string_item_header"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_extra_large_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleItemTextView"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/fake_string_description" />

    </LinearLayout>

</RelativeLayout>